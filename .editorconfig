root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx}]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[package.json]
[package-lock.json]
[yarn.lock]
[pnpm-lock.yaml]
[*.{yml,yaml}]
[.github/**/*.yml]
[.github/**/*.yaml]
[.github/**/*.json]
[.vscode/**/*.json]
[ci.yml]
[.prettierrc]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 4

[*.{css,scss,less}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
